# Maintainer: Ryon Sherman <ryon.sherman@gmail.com>

_gitname="stv0g"
_pkgname="unicode-emoji"

pkgname="pidgin-${_pkgname}-git"
pkgver=41e746d
pkgrel=1
pkgdesc="Apple, Android and Standard (Symbola) Unicode Emojis for Pidgin."

provides=("pidgin-${_pkgname}")

arch=('any')
license=('Apache' 'custom')
url="https://github.com/${_gitname}/${_pkgname}"

depends=('pidgin')
makedepends=('git')

source=("git+https://github.com/${_gitname}/${_pkgname}.git")
md5sums=('SKIP')


pkgver() {
    cd ${srcdir}/${_pkgname}
    git describe --always | sed 's|-|.|g'
}

package() {
    cd ${srcdir}/${_pkgname}
    
    install -d ${pkgdir}/usr/share/pixmaps/pidgin/emotes
    cp -r {android,apple,symbola} ${pkgdir}/usr/share/pixmaps/pidgin/emotes
}
